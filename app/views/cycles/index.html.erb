<h1>Listing cycles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Description</th>
    <th>Tags</th>
    <th></th>
    <th></th>
  </tr>

<% @cycles.each do |cycle| %>
  <tr>
    <td><%= cycle.title %></td>
    <td><%= cycle.start_date %></td>
    <td><%= cycle.end_date %></td>
    <td><%= cycle.description %></td>
    <td><%= raw cycle.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %></td>
    <td><%= link_to 'Show', cycle %></td>
    <td><%= link_to 'Edit', edit_cycle_path(cycle) %></td>
    <td><%= link_to 'Destroy', cycle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Cycle', new_cycle_path %>
