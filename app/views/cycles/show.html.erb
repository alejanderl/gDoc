<div  id="single-asset" class="span7 ofsset1">
  
  <p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @cycle.title %>
</p>

<p>
  <b>Start date:</b>
  <%= @cycle.start_date %>
</p>

<p>
  <b>End date:</b>
  <%= @cycle.end_date %>
</p>

<p>
  <b>Description:</b>
  <%= @cycle.description %>
</p>

<p>
  <b>Tags:</b>
  <div style="background-color: #E89BB6">
      <%= raw @cycle.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %>
  </div>
</p>


<p>
  <b>Associated events:</b>
 <ul>
  <% @cycle.events.each  do |event|  %>
    <li><%= link_to event.title, event %></li>
    <% end %>
  </ul>

</p>

<%= link_to 'Edit', edit_cycle_path(@cycle) %> |
<%= link_to 'Back', cycles_path %>
</div>
