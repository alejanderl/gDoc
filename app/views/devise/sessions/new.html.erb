<div id="single-asset" class="row">
    <div class="span5">
      <h2 class="span5 offset"><%= t"Signin_page_title"%></h2>
      <h5 class="span3 offset">Sign in</h5>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
     
      <div class="span5">  <%= f.email_field :email, :placeholder => "#{t"global.your_email"} ...",:class => "span5" %></div>
    
      <div class="span5">  <%= f.password_field :password, :placeholder => "#{t"global.password"}" , :class=> "span5"%></div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="span3 offset3 checkbox"><p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p></div>
      <% end -%>
    <br/>
      <div class="span3 offset2"><%= f.submit (t"global.sign_in") , :class => "btn btn-large"%></div>
      
    <% end %>
    <div class="span2 offset4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>