


<div  id="single-asset" class="span7 ofsset1">
  
<p id="notice"><%= notice %></p>

<p>
  
  <h1><%= @participant.name %></h1>
</p>
<div class="image">
      <%= image_tag @participant.image_url(:thumb) if @participant.image? %>
    </div>
<p>
  <b>Short description:</b>
  <%= @participant.bio %>
</p>

<p>
  <b>Tags:</b>
  <div style="background-color: #E89BB6">
      <%= raw @participant.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %>
  </div>
</p>

<p>
  <b>Content related:</b>
  <% #= @photo.content_related %>
</p>


<%= link_to 'Edit', edit_participant_path(@participant) %> |
<%= link_to 'Back', participants_path %>
<div class="clearfix"></div>
</div>
