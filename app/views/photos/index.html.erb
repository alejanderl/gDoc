<h1>Listing photos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Description</th>
    <th>License</th>
    <th>Format</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= image_tag photo.image_url(:nano_thumb_50) if photo.image? %><%= photo.title %></td>
    <td><%= photo.date %></td>
    <td><%= photo.description %></td>
    <td><%= photo.license %></td>
    <td><%= photo.format %></td>
    
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

