  <b><%=  t("metadata.terms_of_use") %>:</b>
  <%= @video.terms_of_use %>
</p>

<p>
  <b><%=  t("metadata.format") %>:</b>
  <%= @video.format %>
</p>

<p>
  <b><%=  t("metadata.duration") %>:</b>
  <%= @video.duration %>
</p>

<p>
  <b><%=  t("metadata.language") %>:</b>
  <%= @video.language %>
</p>
<p>
  <b><%=  t("metadata.notes") %>:</b>
  <%= @video.notes %>
</p>

<p>

  <% if allow? "videos", "edit" %>
    <%= link_to t("link.edit"), edit_video_path(@video) %> |
  <% end %>

<%= link_to t("link.back"), videos_path %>

</p>
</div>
