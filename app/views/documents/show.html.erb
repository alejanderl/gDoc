<div  id="single-asset" class="span7 ofsset1">
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @document.title %>
</p>

<p>
  <b>Date:</b>
  <%= @document.date %>
</p>

<p>
  <b>Description:</b>
  <%= @document.description %>
</p>

<p>
  <b>License:</b>
  <%= @document.license %>
</p>

<p>
  <b>Format:</b>
  <%= @document.format %>
</p>

<p>
  <b>Language:</b>
  <%= @document.language %>
</p>

<p>
  <b>Tags:</b>
  <div style="background-color: #E89BB6">
      <%= raw @document.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %>
  </div>
</p>



<%= link_to 'Edit', edit_document_path(@document) %> |
<%= link_to 'Back', documents_path %>
</div>
