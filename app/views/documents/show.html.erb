<div  id="single-asset" class="span7 ofsset1">
<% if !notice.nil? %>
<p id="notice"><%= notice %></p>
<% end %>
<p>
  <b><%=  t("metadata.title") %>:</b>  
  <h1><%= @document.title %></h1>
</p>
 <%= favourite_button(@document) if current_user.present? %>
 
<p>
  <b><%=  t("metadata.date") %>:</b> 
  <%= @document.date %>
</p>

<p>
  <b><%=  t("metadata.description") %>:</b>
  <%= @document.description %>
</p>

<p>
  <b><%=  t("metadata.license") %>:</b>
  <%= @document.license %>
</p>

<p>
  <b><%=  t("metadata.format") %>:</b>
  <%= @document.format %>
</p>

<p>
  <b><%=  t("metadata.duration") %>:</b>
  <%= @document.language %>
</p>

<% if allow? "documents", "edit" %>

<%= link_to t("link.edit"), edit_document_path(@document) %> |
<% end %>
<%= link_to t("link.back"), documents_path %>
</div>
