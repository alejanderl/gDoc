<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Description</th>
    <th>License</th>
    <th>Format</th>
    <th>Language</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.title %></td>
    <td><%= document.date %></td>
    <td><%= document.description %></td>
    <td><%= document.license %></td>
    <td><%= document.format %></td>
    <td><%= document.language %></td>
    <td><%= document.person_id %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

