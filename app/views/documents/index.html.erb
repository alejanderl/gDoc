
<h1><%= t("listing.documents") %></h1>

<% if allow? "documents", "edit" %>
    <%= link_to t("title.new_document"), new_document_path, :class => "btn btn-medium pull-right" if current_user.present?%>
<% end %>



<% @documents.each do |t|%>

  <div class="box_container full-width span7">
    <div class="favourites">
      <%#= link_to "add to favourites",add_favourite_path(t.class,t.id), :remote => true %>
      <%#= favourite_button(t) if current_user.present? %>
    </div>
    <div class="name">
      <%= link_to t.title,document_url(t.id) %>
    </div>   
   <div style="background-color: #E89BB6">

    <%= t.tag_list {|t| t} %>
   </div>

  </div>
  

<% end %>
  <%= paginate @documents %>

