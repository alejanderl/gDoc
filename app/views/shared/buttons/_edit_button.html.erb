<% if allow? t.class.to_s.downcase, "edit" %>
  <%= link_to t("link.edit"), eval("edit_#{t.class.to_s.downcase}_path(t)"),:class => "btn btn-medium " %> 
<% end %>


<% if allow? t.class.to_s.downcase, "destroy" %>
   <%= link_to  t("link.destroy"), t, :method => :delete , :data => {:confirm => "Are you sure?" }, :class => "btn btn-medium "%>
<% end %>