<p id="notice"><%= notice %></p>


<div  id="single-asset" class="span7 ofsset1">
  <p id="notice"><%= notice %></p>
  <p>
    <b>Title:</b>
    <%= @event.title %>
  </p>
  
  <p>
    <b>Date:</b>
    <%= @event.date %>
  </p>
  
  <p>
    <b>Time:</b>
    <%= @event.time %>
  </p>
  
  <p>
    <b>Description:</b>
    <%= @event.description %>
  </p>
<p>
  <b>Tags:</b>
  <div style="background-color: #E89BB6">
      <%= raw @event.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %>
  </div>
</p>

  <p>
   <b>Cycle:</b>
     <% if @event.cycles.present? %>  
       <%  @event.cycles.each do |c|  %>
          <td><%= link_to c.title, c.title %></td>
       <% end %>
    <% end %>
  </p>
  
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Back', events_path %>  
</div>

