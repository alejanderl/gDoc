<h1>Listing audios</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Description</th>
    <th>License</th>
    <th>Format</th>
    <th>Duration</th>
    <th>Language</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @audios.each do |audio| %>
  <tr>
    <td><%= audio.title %></td>
    <td><%= audio.date %></td>
    <td><%= audio.description %></td>
    <td><%= audio.license %></td>
    <td><%= audio.format %></td>
    <td><%= audio.duration %></td>
    <td><%= audio.language %></td>
    <td><%= audio.person_id %></td>
    <td><%= link_to 'Show', audio %></td>
    <td><%= link_to 'Edit', edit_audio_path(audio) %></td>
    <td><%= link_to 'Destroy', audio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

